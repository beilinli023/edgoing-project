# Strapi服务器配置 | Strapi Server Configuration
HOST=0.0.0.0
PORT=1337

# 安全密钥配置 | Security Keys Configuration
APP_KEYS=your-app-keys-here
API_TOKEN_SALT=your-api-token-salt-here
ADMIN_JWT_SECRET=your-admin-jwt-secret-here
TRANSFER_TOKEN_SALT=your-transfer-token-salt-here
JWT_SECRET=your-jwt-secret-here

# 数据库配置 - 使用宝塔MySQL | Database Configuration - Using Baota MySQL
DATABASE_CLIENT=mysql
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=edgoing_db
DATABASE_USERNAME=edgoing_user
DATABASE_PASSWORD=your-secure-password
DATABASE_SSL=false

# SMTP配置 | SMTP Configuration
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password-or-app-password

# 管理员邮箱配置 | Admin Email Configuration
ADMIN_EMAILS=admin@your-domain.com

# 生产环境设置 | Production Environment Settings
NODE_ENV=production
